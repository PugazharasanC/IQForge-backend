# MongoDB connection string
MONGO_URI=mongodb://your_mongo_user:your_mongo_password@localhost:27017/your_db_name

# JWT secret for authentication
JWT_SECRET=your_jwt_secret

# Application port
PORT=3000

# CORS allowed origins (comma separated)
CORS_ORIGINS=http://localhost:3000

# Socket.IO path (optional)
SOCKET_IO_PATH=/socket.io

# Node environment
NODE_ENV=development

# # Mongoose options (optional, e.g., pool size)
# MONGO_POOL_SIZE=5
# MONGO_USE_NEW_URL_PARSER=true
# MONGO_USE_UNIFIED_TOPOLOGY=true
